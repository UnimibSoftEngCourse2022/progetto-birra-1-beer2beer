<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/shade2"
        card_view:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/shade2"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ingredientNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="start"
                android:padding="10dp"
                android:paddingStart="30dp"
                android:textColor="@color/textBrown"
                android:textSize="12sp"
                tools:text="Ingredient name"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/quantityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="end"
                android:padding="10dp"
                android:textSize="12sp"
                android:textColor="@color/textBrown"
                tools:text="@string/quantity" />

            <TextView
                android:id="@+id/unitOfMeasureRecipeIngredientTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="40dp"
                android:fontFamily="sans-serif"
                android:gravity="end"
                android:padding="10dp"
                android:textSize="12sp"
                android:textColor="@color/textBrown"
                tools:text="@string/unitOfMeasure"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
